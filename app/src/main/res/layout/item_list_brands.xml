<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/imageViewBrandIcon"
        android:contentDescription="@null"
        android:layout_width="@dimen/brand_img_size"
        android:layout_height="@dimen/brand_img_size"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="9dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/textViewBrandName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_16_dp"
        android:layout_marginStart="@dimen/margin_16_dp"
        android:textSize="@dimen/text_size_14_sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Namine"
        app:layout_constraintLeft_toRightOf="@id/imageViewBrandIcon"
        app:layout_constraintRight_toLeftOf="@+id/imageViewAddToChart"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageView
        android:id="@+id/imageViewAddToChart"
        android:layout_width="@dimen/brand_add_to_cart_size"
        android:layout_height="@dimen/brand_add_to_cart_size"
        android:layout_marginLeft="@dimen/margin_16_dp"
        android:layout_marginStart="@dimen/margin_16_dp"
        app:layout_constraintLeft_toRightOf="@+id/textViewBrandName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/buttonFollow"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/buttonFollow"
        android:textColor="@color/colorWhite"
        android:layout_width="@dimen/brand_btn_follow_width"
        android:layout_height="@dimen/brand_btn_follow_height"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>